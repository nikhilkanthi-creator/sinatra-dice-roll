<!-- /views/one_twenty.erb -->

<!DOCTYPE html>
<html>
<head>
  <title>Dice Roll</title>
</head>

<body>
  <h1>1d20</h1>
  <% if @first_die.even? %>
  <p style="color: red"><%= @outcome %></p>
  <% elsif @first_die.odd? %>
  <p style="color: green"><%= @outcome %></p>
  <% else %>
  <p><%= @outcome %>
  <% end %>
</body>
</html>
